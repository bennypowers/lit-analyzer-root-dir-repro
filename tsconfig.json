{
  "files": ["declaration.d.ts"],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "incremental": true,
    "inlineSources": true,
    "module": "es2022",
    "moduleResolution": "Node",
    "verbatimModuleSyntax": true,
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "useDefineForClassFields": false
  },
  "paths": {
      "a/*": [
        "./a/*"
      ],
      "b/*": [
        "./b/*"
      ]
    }

}

